{# form to edit a customer #}
{% extends 'template.view.twig' %}

{% block content %}

  <section class="heading">
    <h2>Update Customer</h2>
  </section>
  <div class="form-container">
    <form method="post" action="{{ path_for('postUpdateCustomer', {'id' : customer.customerID}) }}" class="form"> 
      <h2>Enter New Details</h2>
      {# show a list of errors if set #}
      {% if errors %}

        {% for err in errors %}
          <p class="error">{{ err| first }}</p>
        {% endfor %}
      
      {% endif %}
      <label for="fname">First Name</label>
      <input id="fname" name="fname" type="text" value="{{ oldInput.fname == '' ? customer.fname : oldInput.fname | e | trim }}" required>
      <label for="sname">Last Name</label>
      <input id="sname" name="sname" type="text" value="{{ oldInput.sname == '' ? customer.sname : oldInput.sname | e | trim }}" required>
      <label for="address">Address</label>
      <input id="address" name="address" type="text" value="{{ oldInput.address == '' ? customer.address : oldInput.address | e | trim }}" required>
      <label for="postCode">Post Code</label>
      <input id="postCode" name="postCode" type="text" value="{{ oldInput.postCode == '' ? customer.postCode : oldInput.postCode | e | trim }}" required>
      <label for="email">Email</label>
      <input id="email" name="email" type="email" value="{{ oldInput.email == '' ? customer.email : oldInput.email | e | trim }}" required>
      <label for="tel">Tel No.</label>
      <input id="tel" name="tel" type="text" value="{{ oldInput.tel == '' ? customer.tel : oldInput.tel | e | trim }}" required>
      <input class="button" value="Update âž¡" type="submit">
    </form>
  </div>

{% endblock %}